extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Página da Espécie: #{plantas[0].Espécie}
      h2 Nome cientifico: #{plantas[0].Nome_Científico}
    button.w3-btn.w3-round.w3-blue.w3-margin
            a(href="/") Voltar atrás
    .w3-container 
      table.w3-table-all 
        tr 
          th Identificador
          th Freguesia
          th Espécie
          th Estado
          th Número de intervenções
        each p in plantas
          tr 
            td
              a(href="/" + p._id) #{p._id}
            td= p.Freguesia
            td=p.Espécie
            td= p.Estado 
            td= p.Número_de_intervenções

    footer.w3-blue 
      h5 Generated by ECP::EngWeb2023 in #{d} | #[a(href="/") Go Back to Home!]
      
